<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IFI | @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://kit.fontawesome.com/66bf06966e.js"
            crossorigin="anonymous"></script>
</head>
<body>
    <header class="accent-color">
        <div class="header-text">@ViewBag.Title</div>
        <!-- This should be changed according to page name -->
        <div class="current-user">
            <div class="user-img">
                <i class="fa-solid fa-circle-user"></i>
            </div>
            <div class="user-name">logged-user</div>
            <!-- This should be changed according to logged in user type -->
        </div>
    </header>

    <div class="content">
        @RenderBody()
    </div>

    <footer class="accent-color">
        &copy;@DateTime.Now.Year - isuru fiberglass industries plc
        <!-- Current Year Should be displayed -->
    </footer>
</body>
</html>
